<body>

    <!-- Header section -->
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 text-center text-lg-left">
                        <!-- logo -->
                        <a href=@Url.Action("Index", "Home") class="site-logo">
                            <img src="/Assets/img/logo.png" alt="">
                        </a>
                    </div>
                    <div class="col-xl-6 col-lg-5 mt-2">
                        <form class="header-search-form">
                            <input type="text" placeholder="Kitap ara ....">
                            <button><i class="flaticon-search"></i></button>
                        </form>
                    </div>
                    <div class="col-xl-4 col-lg-5 mt-1">
                        <div class="user-panel">
                            <div class="up-item">
                                <i class="flaticon-profile"></i>
                                @Html.ActionLink("Giriş Yap", "SignIn", "Home") - @Html.ActionLink("Üye Ol", "SignUp", "Home")
                            </div>
                            <div class="up-item mt-1">
                                <div class="shopping-card">
                                    <i class="flaticon-bag"></i>
                                    <span>0</span>
                                </div>
                                @Html.ActionLink("Sepet", "ShoppingCart", "Home")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="main-navbar">
            <div class="container">
                <!-- menu -->
                <ul class="main-menu">
                    <li>@Html.ActionLink("Göz At", "Products", "Category")</li>
                    <li>@Html.ActionLink("Sık Sorulan Sorular", "FAQ", "Home")</li>
                    <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>

                    @*<li><a href="#">Hakkımızda</a></li>--%>

                        <li>
                            <a href="#">Garanti Ve İade Koşulları</a>
                            <ul class="sub-menu">
                                <li><a href="#">Sneakers</a></li>
