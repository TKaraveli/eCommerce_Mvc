@using System.Web.Razor
@model Product

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- product section -->
<section class="product-section">
    <div class="container">
        <div class="back-link">
            @*<a href="../index.aspx"> &lt;&lt; Anasayfaya Dön</a>*@
            @Html.ActionLink("Anasayfaya Dön", "Index", "Home")

        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="product-pic-zoom">
                    <img class="product-big-img" src="/Assets/img/product/@Model.ImageUrl" alt="">
                </div>
                <div class="product-thumbs" tabindex="1" style="overflow: hidden; outline: none;">
                    <div class="product-thumbs-track">
                        <div class="pt active" data-imgbigurl="/Assets/img/product/@Model.ImageUrl"><img src="/Assets/img/product/@Model.ImageUrl" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture1"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture1" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture2"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture2" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture3"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture3" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture4"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture4" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture5"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture5" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture6"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture6" alt=""></div>
                        <div class="pt" data-imgbigurl="~/Assets/img/productDetails/kucukPrens/@Model.Picture7"><img src="~/Assets/img/productDetails/kucukPrens/@Model.Picture7" alt=""></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 product-details">
                <h2 class="p-title">@Model.Name</h2>
                <h3 class="p-price">@Model.UnitPrice TL</h3>
                <div class="p-rating">
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o fa-fade"></i>
                </div>
                <div class="p-review">
                    <a href="">@Model.Reviews.Count Yorum</a>|<a href="">Yorum Ekle</a>
                </div>
                <div>
                    <p style="font-size:20px;">Yazar: @Model.Writer.Name @Model.Writer.Surname</p>
                    <p style="font-size:20px;">Çevirmen: Tomris Uyar, Cemal Süreya</p>
                    <p style="font-size:20px;">Yayınevi : @Model.Supplier.CompanyName</p>
                </div>
                @*<div class="quantity">
            <p>Adet</p>
            <div class="pro-qty"><input type="text" value="1"></div>
        </div>*@@*<a href="#" class="site-btn">SEPETE EKLE</a>*@
            @{
                if (Model.UnitsInStock < 1)
                {
                    <h4 class="p-stock">Stok Durumu: <span>Stokta Yok!</span></h4>
                    <button type="submit" class="btn btn-success" id="addToCart" disabled>
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Sepete Ekle
                    </button>
                }
                else
                {
                    <h4 class="p-stock">Stok Durumu: <span>Stokta</span></h4>
                    using (Html.BeginForm("AddToCart", "Cart", new { id = Model.ProductId}))
                    {
                        <button type="submit" class="btn btn-success" id="addToCart">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Sepete Ekle
                        </button>
                    }
                }
            }

                <div id="accordion" class="accordion-area">
                <div class="panel">
                    <div class="panel-header" id="headingOne">
                        <button class="panel-link active" data-toggle="collapse" data-target="#collapse1" aria-expanded="true" aria-controls="collapse1">BİLGİ</button>
                    </div>
                    <div id="collapse1" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="panel-body">
                            <p>@Model.LongDesciription</p>
                            <p>Sayfa Sayısı : @Model.Pages</p>
                            <p>İlk Baskı Yılı : @Model.PublishYear</p>
                            <p>Dil : Türkçe</p>
                        </div>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-header" id="headingTwo">
                        <button class="panel-link" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">ÖDEME SEÇECEKLERİ </button>
                    </div>
                    <div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="panel-body">
                            <img src="/Assets/img/cards.png" alt="">
                            <p>Ek olarak kapıda ödeme seçeneği ile !</p>
                        </div>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-header" id="headingThree">
                        <button class="panel-link" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">Kargolama & İade</button>
                    </div>
                    <div id="collapse3" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                        <div class="panel-body">
                            <h4>24 Saat İçerisinde İade Seçeneği</h4>
                            <p>Ortalama teslim süresi <span>1 - 4 gün</span></p>
                            <p>Sipariş kargoya verildikten sonra bulunduğunuz şehre ve ilçeye göre 1-4 gün içerisinde dağıtım yapılmaktadır. Aksaklık yaşamanız durumunda kargo takip numaranız ile durumu mail olarak firmamıza iletebilirsiniz. Teslimat sürecini kargo takip kodunuz ile kontrol ederek adreste bulunmanız yeterli olacaktır. Köy dağıtım ya da mobil alanlar için süreç değişiklik gösterebilmektedir.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="social-sharing">
                <a href=""><i class="fa fa-facebook"></i></a>
                <a href=""><i class="fa fa-twitter"></i></a>
                <a href=""><i class="fa fa-youtube"></i></a>
            </div>
            </div>
            </div>
        </div>
    </section>

    <!-- article comments -->
    <div class="article-comments">
        <div class="section-title">
            <h2 class="title">Yorumlar</h2>
        </div>

        <!-- comment -->
        @{
            foreach (var review in Model.Reviews)
            {
                <div class="media">
                    <div class="media-left">
                        <img src="~/Assets/img/review/av-1.jpg" alt="">
                    </div>
                    <div class="media-body">
                        <div class="media-heading">
                            <h5>@review.Name <span class="reply-time" style="color:black;">@review.ReviewDate</span></h5>
                        </div>
                        <p>@review.Review</p>

                    </div>
                </div>
            }
        }
    </div>

    <!-- reply form -->
    <div class="article-reply-form">
        <div class="section-title">
            <h2 class="title">Yorum Yaz</h2>
        </div>

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(i => i.ProductId)
            <div class="container">
                <input class="input" placeholder="Name" type="text" name="Name">
                <br />
                <input class="input" placeholder="Email" type="email" name="Email">
                @*<br />
                <input class="input" placeholder="Website" type="url" name="Website">*@
                <br />
                <textarea class="input" placeholder="Message" name="Message"></textarea>
                <br />
                <input id="signIn" type="submit" class="btn btn-info" value="Send Message" />
            </div>

        }


    </div>
    <!-- /reply form -->
    <!-- product section end -->
