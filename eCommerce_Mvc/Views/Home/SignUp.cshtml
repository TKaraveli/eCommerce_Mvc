
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .footer-section {
        padding-top: 0px;
        margin-top: 14.1%;
    }
</style>

<div class="container mb-3 mt-3">

    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="txtFirstName">Ad</label>
                <input id="txtFirstName" type="text" placeholder="Ad" class="form-control" name="Email" />
            </div>
            <div class="form-group col-md-6">
                <label for="txtLastName">Soyad</label>
                <input id="txtLastName" type="text" placeholder="Soyad" class="form-control" name="Email" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="txtEmail">E-posta</label>
                <input id="txtEmail" type="text" placeholder="E-posta" class="form-control" name="Email" />
            </div>
            <div class="form-group col-md-6">
                <label for="txtPassword">Şifre</label>
                <input id="txtPassword" type="password" placeholder="Şifre" class="form-control" name="Password" />
            </div>
        </div>
        <div class="form-group">
            <label for="txtAddress">Adres</label>
            <input id="txtAddress" type="text" placeholder="Adres" class="form-control" name="Password" />
        </div>
        <div class="form-group">
        </div>
        <input id="signUp" type="submit" value="Kayıt Ol" class="btn btn-primary"/>

    </form>
</div>




